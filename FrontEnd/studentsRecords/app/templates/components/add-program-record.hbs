<div class="ui long modal scrolling">
  <div class="header">Add a New Program Record</div>
  <div class="content">
    <div class="ui form">
      <div class="inline field">
        <label>Name</label>
        {{input size="10" type="text" value = newName}}
      </div>
      <div class="inline field">
        <label>Level</label>
        {{input size="10" type="number" value = newLevel}}
      </div>
      <div class="inline field">
        <label>Load</label>
        <select onchange={{action 'selectLoad' value="target.value"}}>
          {{#each loadModel as |loadChoice|}}
            <option value={{loadChoice.id}}>{{loadChoice.load}}</option>
          {{/each}}
        </select>
      </div>
      <div class="inline field">
        <label>Status</label>
        <select onchange={{action 'selectStatus' value="target.value"}}>
          {{#each statusModel as |statusChoice|}}
            <option value={{statusChoice.id}}>{{statusChoice.status}}</option>
          {{/each}}
        </select>
      </div>
      {{#each plans as |currentPlan|}}
        {{plan-dropdown plan = currentPlan planModel = planModel}}
      {{/each}}
      <div class="inline field">
        <label>Add a plan</label>
        <button class="ui icon button" {{action 'newPlanField'}} title="Add another plan">
          <i class="plus icon"></i>
        </button>
        {{#if plans}}
          <label>Remove Plan</label>
          <button class="ui icon button" {{action 'deletePlanField'}} title="Remove last plan">
            <i class="minus icon"></i>
          </button>
        {{/if}}
      </div>
    </div>
  </div>
    <br><br>
    <div class="actions">
      <br>
      <div class="ui positive button" {{action 'saveNewRecord'}}>Save</div>
      <div class="ui negative basic button" {{action "close"}}>Cancel</div>
    </div>
  <div class="header">Or Add an Existing Program Record</div>
  <div class="content">
    <div class="ui form">
      <div class="inline field">
        <label>Program</label>
        <select onchange={{action 'selectRecord' value="target.value"}}>
          {{#each programModel as |programChoice|}}
            <option value={{programChoice.id}}>{{programChoice.name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="inline field">
        <label>Description</label>
      </div>
    </div>
  </div>
  <br><br>
  <div class="actions">
    <br>
    <div class="ui positive button" {{action 'saveRecord'}}>Save</div>
    <div class="ui negative basic button" {{action "close"}}>Cancel</div>
  </div>
</div>