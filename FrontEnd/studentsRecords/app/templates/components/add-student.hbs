<div class="ui center aligned header">
  <h2>Add Student</h2>
</div>


<div class="ui inverted menu">
  <a class="item" {{action 'saveStudent'}}>
    <i class="save icon"></i>
    Save
  </a>
  <a class="item" {{action 'addMalePhoto'}}>
    <i class="image icon"></i>
    Add Male Photo
  </a>
  <a class="item" {{action 'addFemPhoto'}}>
    <i class="image icon"></i>
    Add Female Photo
  </a>
  <a class="item" {{action 'helpMe'}}>
    Help
  </a>
</div>


<div class="ui grid">
  <div class="ui right aligned  seven wide column">
    <div class="ui form">
      <div class="inline field">
        <label>Student Number</label>
        {{input size="10" type="text" value = numBox}}
      </div>
      <div class="inline field">
        <label>First Name</label>
        {{input type="text"  value = fNameBox}}
      </div>
      <div class="inline field">
        <label>Last Name</label>
        {{input type="text" value = lNameBox}}
      </div>
      <div class="inline field">
        <label>Gender</label>
        <select onchange={{action 'selectGender' value="target.value"}}>
          {{#each genderModel as |genderChoice|}}
            <option value={{genderChoice.id}}>{{genderChoice.name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="inline field">
        <label>Date of Birth</label>
        <input value={{selectedDate}} type="date" onchange={{action 'assignDate' value="target.value"}}>
      </div>
      <div class="inline field">
        <label>Residency</label>
        <select onchange={{action 'selectResidency' value="target.value"}}>
          {{#each residencyModel as |residencyChoice|}}
            <option value={{residencyChoice.id}}>{{residencyChoice.name}} </option>
          {{/each}}
        </select>
      </div>
    </div>
  </div>
  <div class="ui center aligned  seven wide column segment">
    <img  src={{studentPhoto}}>
  </div>
  {{#if isHelpShowing}}
    {{help-page notDONE = isHelpShowing}}
  {{/if}}
</div>

<div class="ui small modal">

  <div class="ui icon header">
    <i class="user icon"></i>
    Student Added
  </div>
  <div class="actions">
    <div class="ui positive right labeled icon button">
      Okay
      <i class="checkmark icon"></i>
    </div>
  </div>
</div>