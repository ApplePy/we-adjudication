<div class="ui grid">
  <div class="three wide column">
    <div class="ui violet vertical pointing menu">

      <a class="item active" {{action "home"}}>
        <i class="large home icon"></i>
        Home
      </a>

      <a class="item" {{action "studentsDataEntry"}}>
        <i class="large leanpub icon"></i>
        Students Records
      </a>

      <a class="item" {{action "addStudent"}}>
        <i class="large add user icon"></i>
        Add Student
      </a>

      <a class="item" {{action "manageHighSchoolData"}}>
        <i class="large address book icon"></i>
        Manage High School Data
      </a>

      <a class="item" {{action "manageSystem"}}a>
        <i class="large code icon"></i>
        Manage System
      </a>

       <a class="item" {{action "manageAdjudication"}}a>
        <i class="large code icon"></i>
        Manage Adjudication Codes
      </a>

      <a class="item" {{action "manageRules"}}>
        <i class="large write icon"></i>
        Manage Adjudication Rules
      </a>

      <a class="item " {{action "about"}}>
        <i class="large user icon"></i>
        About
      </a>

    </div>
  </div>
  <div class="thirteen wide column ">
    <div class="ui segment container">
      {{#if isHomeShowing}}
        {{welcome-page}}
      {{/if}}
      {{#if isStudentsRecordsDataEntry}}
        {{student-data-entry}}
      {{/if}}
      {{#if isManageSystemShowing}}
        {{manage-system}}
      {{/if}}
      {{#if isAboutShowing}}
        {{about-us}}
      {{/if}}
      {{#if isAdding}}
        {{add-student}}
      {{/if}}
       {{#if isManageAdjudicationShowing}}
        {{manage-adjudication}}
      {{/if}}
      {{#if isHighSchoolShowing}}
        {{high-school-data}}
      {{/if}}
      {{#if isManageRulesShowing}}
        {{manage-rules}}
      {{/if}}
    </div>
  </div>
</div>