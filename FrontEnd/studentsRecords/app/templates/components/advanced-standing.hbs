<div class="ui form">
  <div class="inline field">
    <label>Course</label>
      {{input size="10" type="text" value = standing.course}}
  </div>

  <div class="inline field">
    <label>Description</label>
      {{textarea cols="6" rows="6" value = standing.description}}
  </div>

  <div class="inline field">
    <label>Units</label> 
    {{input type="number" value = standing.units}}
  </div>

  <div class="inline field">
    <label>Grade</label>
    {{input type="number" value = standing.grade}}
  </div>

  <div class="inline field">
    <label>From</label>
    {{input type="text" value = standing.from}}
  </div>
<div class="ui negative button" {{action "deleteStanding"}}>Delete Course</div>
</div>